@model BackEnd_S2_L5_MVC.ViewModel.ScarpaDettaglioViewModel;
@{
}

<p class="text-center fst-italic fw-light  text-decoration-underline m-4 fs-2">Dettaglio prodotto</p>
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card mb-4 shadow-sm">

            @* Copertina *@
            <img src="@Model.Scarpa.ImmagineCopertina"
                 class="card-img-top"
                 alt="@Model.Scarpa.Nome"
                 style="height: 300px; object-fit: contain;" />

            <div class="card-body">
                <h3 class="card-title fst-italic fw-light">@Model.Scarpa.Nome</h3>
                <p class="card-text fs-4 fw-bold fst-italic ">
                    Prezzo: €@Model.Scarpa.Prezzo
                </p>
                <p class="card-text fst-italic fw-semibold">
                    @Model.Scarpa.Descrizione
                </p>

                @* Immagine copertina, immagine 1, immagine 2 *@
                <div class="row text-center mt-3">
                    <div class="col-4">
                        <img src="@Model.Scarpa.ImmagineCopertina"
                             alt="@Model.Scarpa.Nome"
                             class="img-fluid rounded"
                             style="height: 120px; object-fit: cover;">
                    </div>

                    <div class="col-4">
                        <img src="@Model.Scarpa.Immagine2"
                             alt="@Model.Scarpa.Nome"
                             class="img-fluid rounded"
                             style="height: 120px; object-fit: cover;">
                    </div>

                    <div class="col-4">
                        <img src="@Model.Scarpa.Immagine3"
                             alt="@Model.Scarpa.Nome"
                             class="img-fluid rounded"
                             style="height: 120px; object-fit: cover;">
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

